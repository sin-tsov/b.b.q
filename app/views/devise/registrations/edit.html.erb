<h2><%= t('views.edit_user') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div> <%="#{t('views.waiting_confirmation')} #{resource.unconfirmed_email}" %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(оставьте пустым, если не хотите менять)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('views.min_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i><%= t('views.need_current_password_msg') %></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t('views.renew_btn'), class: "btn btn-primary" %>
  </div>
<% end %>
<div class="mt-2">
  <%= button_to t('views.remove_acc'), registration_path(resource_name), data: { confirm: t('views.remove_acc_question') }, method: :delete, class: "btn btn-outline-danger" %>
</div>

<%= link_to t('views.back'), :back %>
