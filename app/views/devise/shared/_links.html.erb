
<%- if controller_name != 'sessions' %>
  <%= link_to t('devise.sessions.new.sign_in'), new_user_session_path, class: 'text-decoration-none' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.registrations.new.sign_up'), new_user_registration_path, class: 'text-decoration-none' %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('app.forget'), new_password_path(resource_name), class: 'text-decoration-none' %><br />
<% end %>
