<!DOCTYPE html>
<html>
<head>
  <title>Bbq</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_pack_tag 'application', media: 'all' %>
  <%= javascript_pack_tag 'application' %>
  <script src="https://use.fontawesome.com/a75a7204ad.js"></script>
</head>

<body>

<div class="content">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <%= link_to 'Шашлыки', root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
             <% if user_signed_in? %>
            <li class="nav-item"><%= link_to 'Профиль', current_user, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'Выйти', destroy_user_session_path, :method => :delete, class: "nav-link" %></li>
          <% else %>
            <li class="nav-item"><%= link_to 'Войти', new_user_session_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'Зарегистрироваться', new_user_registration_path, class: "nav-link" %></li>
          <% end %>  
        </ul>
      </div>
    </div>
  </nav>

  <div class="container buffer-top">
    <%= bootstrap_flash %> 

    <div class="wrapper">
      <%= yield %>
    </div>
  </div> 
</div>

<footer class="footer">
  <nav class="navbar navbar-expand-lg">
    <div class="container">
     <p class="mt-6">&copy;<%= t 'app.company' %> <%= Time.now.year %></p>
    </div>
  </nav>
</footer>

</body>
</html>
